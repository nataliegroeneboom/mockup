<h1 align="center">Create new category</h1>
        <%= render 'shared/errors', obj: @category %>
        <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group row">
           <div class="col-sm-2 col-form-label"><%= f.label :name %></div>
           <div class="col-sm-8"> <%= f.text_field :name, class: "form-control", placeholder: "Enter a category", autofocus: true %></div>
          </div>
          
            <div class="form-group"> 
                <div class="col-sm-8 offset-sm-2">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
        <% end %>

     <div class="col-sm-4 offset-sm-4"> 
         [ <%= link_to 'Cancel and return to listing', posts_path %> ]
    </div>

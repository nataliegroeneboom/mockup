<%= render 'shared/errors', obj: @user %>
<div class="row">
    <div class="col-sm-12">  
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group row">
           <div class="col-sm-2 col-form-label"><%= f.label :username %></div>
           <div class="col-sm-8"> <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %></div>
          </div>
          <div class="form-group row">
             <div class="col-sm-2 col-form-label"><%= f.label :email %></div>
          <div class="col-sm-8"> <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %></div>
          </div>
          <div class="form-group row">
             <div class="col-sm-2 col-form-label"><%= f.label :password %></div>
            <div class="col-sm-8"><%= f.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %></div>
          </div>
          <div class="actions">
            <div class="form-group"> 
                <div class="col-sm-8 offset-sm-2">
                    <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
                </div>
            </div>
          </div>
        <% end %>

      <div class="col-sm-4 offset-sm-4"> 
         [ <%= link_to 'Cancel and return to listing', posts_path %> ]
    </div>
</div>
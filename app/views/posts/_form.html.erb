<%= render 'shared/errors', obj: @post %>
<div class="row">
    <div class="col-sm-12">
        <%= form_for(@post, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <div class="form-group row">
           <div class="col-sm-2 col-form-label"><%= f.label :name %></div>
           <div class="col-sm-8"> <%= f.text_field :name, class: "form-control", placeholder: "Name of article", autofocus: true %></div>
          </div>
          <div class="form-group row">
             <div class="col-sm-2 col-form-label"><%= f.label :title %></div>
          <div class="col-sm-8"> <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %></div>
          </div>
          <div class="form-group row">
             <div class="col-sm-2 col-form-label"><%= f.label :content %></div>
            <div class="col-sm-8"><%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Content", autofocus: true %></div>
          </div>
          <div class="actions">
            <div class="form-group"> 
                <div class="col-sm-10 offset-sm-2">
                    <%= f.submit class: 'btn btn-primary btn-lg' %>
                </div>
            </div>
          </div>
        <% end %>

      <div class="col-sm-4 offset-sm-4"> 
         [ <%= link_to 'Cancel and return to listing', posts_path %> ]
    </div>
</div>
